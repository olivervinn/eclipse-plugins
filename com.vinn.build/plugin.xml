<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.vinn.eclipse.build.commands.category"
            name="Vinn Build Commands">
      </category>
      <command
            categoryId="com.vinn.eclipse.build.commands.category"
            defaultHandler="com.vinn.build.handlers.CProjectAssociationHandler"
            description="com.vinn.build.commands.cprojects.link"
            id="com.vinn.build.commands.cprojects.link"
            name="com.vinn.build.commands.cprojects.link">
      </command>
      <command
            categoryId="com.vinn.eclipse.build.commands.category"
            defaultHandler="com.vinn.build.handlers.CProjectAssociationHandler"
            description="com.vinn.build.commands.cprojects.unlink"
            id="com.vinn.build.commands.cprojects.unlink"
            name="com.vinn.build.commands.cprojects.unlink">
      </command>
      <command
            categoryId="com.vinn.eclipse.build.commands.category"
            defaultHandler="com.vinn.build.handlers.ApplyConfToProjectsHandler"
            id="com.vinn.build.commands.applyConfiguration"
            name="com.vinn.build.commands.applyConfiguration">
         <commandParameter
               id="com.vinn.build.commandParameter1"
               name="resource"
               optional="true"
               typeId="org.eclipse.ui.ide.resourcePath">
         </commandParameter>
      </command>
      <command
            defaultHandler="com.vinn.build.handlers.CancelIndexerHandler"
            id="com.vinn.build.commands.indexer.cancel"
            name="com.vinn.build.commands.indexer.cancel">
      </command>
      <command
            defaultHandler="com.vinn.build.handlers.RebuildIndexerHandler"
            id="com.vinn.build.commands.indexer.rebuild"
            name="com.vinn.build.commands.indexer.rebuild">
      </command>
      <command
            defaultHandler="com.vinn.build.handlers.RefreshProjectsHandler"
            id="com.vinn.build.commands.refreshall"
            name="com.vinn.build.commands.refreshall">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.vinn.build.commands.cprojects.link"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+ALT+L"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="com.vinn.build.commands.cprojects.unlink"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+ALT+U">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="com.vinn.build.environment.menu"
               label="Tools"
               tooltip="Settings affecting all projects">
            <command
                  commandId="com.vinn.build.commands.cprojects.link"
                  icon="icons/elements_obj.gif"
                  label="Associate C Projects"
                  style="push">
            </command>
            <command
                  commandId="com.vinn.build.commands.cprojects.unlink"
                  icon="icons/generic_elements.gif"
                  label="Disassociate C Projects"
                  style="push">
            </command>
            <separator
                  name="com.vinn.build.separator1"
                  visible="true">
            </separator>
            <menu
                  label="Set Configuration">
               <dynamic
                     class="com.vinn.build.ui.ConfCompoundContributionItem"
                     id="com.vinn.build.dynamic.confs">
               </dynamic>
            </menu>
            <command
                  commandId="com.vinn.build.commands.cprojects.unlink"
                  label="Clear Configuration"
                  style="push">
            </command>
            <separator
                  name="com.vinn.build.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="com.vinn.build.commands.indexer.rebuild"
                  label="Rebuild Indexes"
                  style="push">
            </command>
            <command
                  commandId="com.vinn.build.commands.indexer.cancel"
                  icon="icons/stop.gif"
                  label="Cancel Indexer"
                  style="push">
            </command>
            <separator
                  name="com.vinn.build.separator3"
                  visible="true">
            </separator>
            <command
                  commandId="com.vinn.build.commands.refreshall"
                  icon="platform:/plugin/org.eclipse.ui.ide/icons/full/elcl16/refresh_nav.gif"
                  label="Refresh All Projects"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.eclipse.cdt.ui.preferences.CPluginPreferencePage"
            class="com.vinn.build.cdt.preferences.VinnBuildPreferencePage"
            id="com.vinn.build.preferences.EnvironmentPreferencePage"
            name="Environment">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.vinn.build.cdt.preferences.VinnBuildPreferenceInitializer">
      </initializer>
   </extension>   
