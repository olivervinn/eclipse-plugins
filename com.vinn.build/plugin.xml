         id="com.vinn.build.cdt.LanguageSettingsProvider"
            name="Vinn Provider"
         point="org.eclipse.cdt.core.LanguageSettingsProvider">
      <provider
            class="com.vinn.build.cdt.LanguageSettingsProvider"
            >
      </provider>
   </extension>-->
   
</plugin>
