<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.vinn.font.adjust.command.increase"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+=">
      </key>
      <key
            commandId="com.vinn.font.adjust.command.decrease"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+-">
      </key>
      <key
            commandId="com.vinn.font.adjust.command.reset"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+0">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.views"
            defaultHandler="com.vinn.ui.utils.handlers.FontSizeChangeHandler"
            id="com.vinn.font.adjust.command.increase"
            name="Vinn Increase Font">
      </command>
      <command
            categoryId="org.eclipse.ui.category.views"
            defaultHandler="com.vinn.ui.utils.handlers.FontSizeChangeHandler"
            id="com.vinn.font.adjust.command.decrease"
            name="Vinn Decrease Font">
      </command>
      <command
            categoryId="org.eclipse.ui.category.views"
            defaultHandler="com.vinn.ui.utils.handlers.FontSizeChangeHandler"
            id="com.vinn.font.adjust.command.reset"
            name="Vinn Reset Font Size">
      </command>
      <command
            defaultHandler="com.vinn.cdt.handlers.RemoveAllProblemMarkersHandler"
            id="com.vinn.build.commands.removeproblems"
            name="com.vinn.build.commands.removeproblems">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.activities">
         <activity
            id="com.vinn.ui.util.cleanup.activity.shell"
            name="Cleanup Easy Shell Menu">
         <enabledWhen>
          <and>
                      <with
                            variable="activePart">
                            <not>
                               <instanceof
                                     value="org.eclipse.ui.editors.text.TextEditor">
                               </instanceof>
                            </not>
                      </with>
                  </and>
         </enabledWhen>
      </activity>
         <activityPatternBinding
               activityId="com.vinn.ui.util.cleanup.activity.shell"
               isEqualityPattern="false"
               pattern=".*com.tetrade.eclipse.plugins.easyshell.command.*">
         </activityPatternBinding>
      <activity
            id="com.vinn.ui.util.cleanup.basic.activity"
            name="Cleanup CDT Basic Action Menu">
         <enabledWhen>
         <and>
            <with
                  variable="activePart">
               <not>
                  <instanceof
                        value="org.eclipse.ui.editors.text.TextEditor">
                  </instanceof>
               </not>
            </with>
            <with
                  variable="com.vinn.ui.utils.filterbasic.active">
               <equals
                        value="ENABLED">
                  </equals>
            </with>
            </and>
         </enabledWhen>
      </activity>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.basic.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.ui.edit.copy">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.basic.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.ui.edit.paste">
      </activityPatternBinding>
      <activity
            id="com.vinn.ui.util.cleanup.activity"
            name="Cleanup CDT Editor Menu">
         <enabledWhen>
            <with
                  variable="activePart">
               <not>
                  <instanceof
                        value="org.eclipse.ui.editors.text.TextEditor">
                  </instanceof>
               </not>
            </with>
         </enabledWhen>
      </activity>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.ui.edit.cut">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.ui.edit.undo">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.ui.edit.text.shiftLeft">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.ui.edit.text.shiftRight">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.ui.file.save">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.ui.file.undo">
      </activityPatternBinding>      
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="false"
            pattern="org.python.pydev.ui.actions.*">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.cdt.managedbuilder.ui/org.eclipse.cdt.managedbuilder.ui.popups.cleanFilesAction">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.cdt.managedbuilder.ui/org.eclipse.cdt.managedbuilder.ui.popups.buildFilesAction">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.cdt.ui/org.eclipse.cdt.ui.excludeCommand.menu">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.cdt.ui/org.eclipse.cdt.ui.deleteConfigsCommand.menu">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.cdt.make.ui/org.eclipse.cdt.make.ui.NavigatorBuildLastTargetAction">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.cdt.make.ui/org.eclipse.cdt.make.ui.NavigatorBuildTargetAction">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="true"
            pattern="org.eclipse.cdt.make.ui/org.eclipse.cdt.make.ui.CViewCreateTargetAction">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity"
            isEqualityPattern="false"
            pattern=".*de.cdhq.eclipse.wordwrap.toggleCommand.*">
      </activityPatternBinding>
      <activity
            id="com.vinn.ui.util.cleanup.activity.project"
            name="Cleanup NonProject Menu">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate>
                  <instanceof
                        value="org.eclipse.core.resources.IProjectNature">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </activity>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity.project"
            isEqualityPattern="false"
            pattern="org.eclipse.cdt.codan.*">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity.project"
            isEqualityPattern="true"
            pattern="org.eclipse.cdt.managedbuilder.ui/org.eclipse.cdt.managedbuilder.ui.ConvertTargetAction">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity.project"
            isEqualityPattern="false"
            pattern=".*de.cdhq.eclipse.wordwrap.toggleCommand.*">
      </activityPatternBinding>
      <activity
            id="com.vinn.ui.util.cleanup.activity.project"
            name="Cleanup Project Menu">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate>
                  <instanceof
                        value="org.eclipse.core.resources.IProjectNature">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </activity>
      <!-- <activityPatternBinding
            activityId="com.vinn.ui.util.cleanup.activity.project"
            isEqualityPattern="false"
            pattern="org.epic.*">
      </activityPatternBinding> -->
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="com.vinn.ui.utils.VinnUtilsActivityState">
         <variable
               name="com.vinn.ui.utils.filterbasic.active"
               priorityLevel="workbench">
         </variable>
         <variable
               name="com.vinn.ui.utils.filterother.active"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=com.vinn.build.environment.menu">
         <menu
               id="com.vinn.build.tools.menu"
               label="Tools">
            <command
                  commandId="com.vinn.font.adjust.command.increase"
                  defaultHandler="com.vinn.cdt.handlers.RemoveAllProblemMarkersHandler"
                  id="com.vinn.font.adjust.command.increase.id"
                  label="Grow Font"
                  name="com.vinn.build.commands.removeproblems">
            </command>
            <command
                  commandId="com.vinn.font.adjust.command.decrease"
                  defaultHandler="com.vinn.ui.utils.handlers.FontSizeChangeHandler"
                  id="com.vinn.font.adjust.command.decrease.id"
                  label="Shrink Font"
                  name="com.vinn.build.commands.removeproblems">
            </command>
            <command
                  commandId="com.vinn.font.adjust.command.reset"
                  defaultHandler="com.vinn.cdt.handlers.RemoveAllProblemMarkersHandler"
                  id="com.vinn.font.adjust.command.reset.id"
                  label="Normal Font"
                  name="com.vinn.build.commands.removeproblems">
            </command>
            <separator
                  name="com.vinn.ui.utils.separator5"
                  visible="true">
            </separator>
            <command
                  commandId="com.vinn.build.commands.removeproblems"
                  defaultHandler="com.vinn.cdt.handlers.RemoveAllProblemMarkersHandler"
                  icon="icons/problems_view.gif"
                  id="com.vinn.build.commands.removeproblems"
                  label="Delete All Problem Markers"
                  name="com.vinn.build.commands.removeproblems">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
